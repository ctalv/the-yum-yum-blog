<h2>Explore a selection of delicious recipes crafted by diverse individuals, incorporating a wide range of ingredients
  from various culinary traditions.</h2>
{{#each recipes}}
<div class="container-wrapper">
  <div class="background-box"></div>
  <div class="recipe-container">
    {{#if @first}}
    <div class="floating-tab"> Popular For You!</div>
    {{/if}}
    <div class="recipe-card">

      <a href="/recipe/{{this.id}}" class="btn">
        <h3>{{this.title}}</h3>
      </a>

    </div>
    <div class="carousel-container">
      <div id="recipeCarousel1" class="carousel slide">
        <div class="carousel-inner">

          <div class="carousel-item active">
            <img src="{{this.image}}" class="d-block w-100" alt="Placeholder Recipe 1">
          </div>

          <div class="carousel-item">
            <img src="/images/img2.jpeg" class="d-block w-100" alt="Placeholder Recipe 2">
          </div>
          <div class="carousel-item">
            <img src="/images/img3.webp" class="d-block w-100" alt="Placeholder Recipe 3">
          </div>

          <div class="carousel-item">
            <img src="/images/img2.jpeg" class="d-block w-100" alt="Placeholder Recipe 2">
          </div>
          <div class="carousel-item">
            <img src="/images/img3.webp" class="d-block w-100" alt="Placeholder Recipe 3">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
